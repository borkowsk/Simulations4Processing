/// A square of an int number.
int sqra(int a)  ///< @note GLOBAL
{
  return a*a;
}

/// A square of an float number.
float sqra(float a)  ///< @note GLOBAL
{
  return a*a;
}

/// A square of an double number.
double sqra(double a)  ///< @note GLOBAL
{
  return a*a;
}

